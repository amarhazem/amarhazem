{
  "containerEnv": {
    "COMPOSE_BAKE": "true",
    "SSH_AUTH_SOCK": "/ssh-agent"
  },
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2.5.4": {
      "configureZshAsDefaultShell": true
    },
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1.6.5": {
      "moby": false,
      "version": "28.1.1"
    },
    "ghcr.io/devcontainers/features/git:1.3.4": {},
    "ghcr.io/devcontainers/features/github-cli:1.0.13": {},
    "ghcr.io/devcontainers/features/kubectl-helm-minikube:1.2.1": {
      "helm": "3.17.3",
      "minikube": "1.35.0",
      "version": "1.33.0"
    },
    "ghcr.io/devcontainers/features/node:1.6.3": {
      "nvmVersion": "0.40.2",
      "pnpmVersion": "10.18.0",
      "version": "22.18.0"
    },
    "ghcr.io/devcontainers-extra/features/act-asdf:2.0.15": {},
    "ghcr.io/devcontainers-extra/features/zsh-plugins:0.0.4": {
      "omzPlugins": "docker fzf git kubectl you-should-use z zsh-autosuggestions zsh-completions zsh-syntax-highlighting",
      "plugins": "docker fzf git kubectl you-should-use z zsh-autosuggestions zsh-completions zsh-syntax-highlighting"
    }
  },
  "forwardPorts": [80, 443],
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu-22.04",
  "mounts": [
    "source=${env:HOME}/.kube,target=/home/vscode/.kube,type=bind",
    "source=zsh_history,target=/root/.zsh_history,type=volume",
    "source=${localEnv:SSH_AUTH_SOCK},target=/ssh-agent,type=bind"
  ],
  "name": "amarhazem",
  // "postCreateCommand": "./.devcontainer/post-create.sh",
  "remoteEnv": {
    "KUBECONFIG": "/home/vscode/.kube/config",
    "SSH_AUTH_SOCK": "/ssh-agent"
  },
  "workspaceFolder": "${localWorkspaceFolder}",
  "workspaceMount": "source=${localWorkspaceFolder},target=${localWorkspaceFolder},type=bind"
}
